w = 1024
h = 640

.unselectable
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

body
	width: 100%
	height: 100%
	margin: 0
	padding: 0
	border: 0
	overflow: hidden
	background-color: #000
	background-image: url(../img/wallpaper.jpg)

	font-family: Consolas,Monaco,Lucida Console,Liberation Mono,DejaVu Sans Mono,Bitstream Vera Sans Mono,Courier New, monospace

.dr
	border: 5px solid #111
	width: w px
	height: h px
	position: absolute
	top: 50%
	left: 50%
	margin-top: -(h/2) px
	margin-left: -(w/2) px

	cursor: url(../img/cursor.png) 0 0, auto

.dr .canvas
	width: w px
	height: h px
	position: relative

	z-index: 0

.screen
	position: absolute
	top: 0
	left: 0
	width: w px
	height: h px

	z-index: 100

.invisible
	display: none

.titlescreen
	background-image: url(../img/logo.png)
	width: w px
	height: h px

.txtbox
	border: 2px solid #DDD
	width: 120px
	height: 16px
	background-color: #000
	color: #DDD
	padding-left: 4px
	padding-right: 4px
	margin-top: 6px
	padding-top: 3px
	font-family: Consolas,Monaco,Lucida Console,Liberation Mono,DejaVu Sans Mono,Bitstream Vera Sans Mono,Courier New, monospace

.txtbox:hover
	border: 2px solid #9C9

.txtbox:focus
	outline: none
	border: 2px solid #6C6

.txtbox.error
	border: 2px solid #993

.loginbox
	margin: 0 auto
	padding-top: 224px
	width: 132px

.btnlogin
	background-image: url(../img/btnyes.png)
	width: 20px
	height: 20px
	margin-top: 4px
	float: right

.btnlogin:hover
	background-position: -20px 0

.spinner
	background-image: url(../img/spinner.gif)
	width: 27px
	height: 27px
	margin: 0 auto
	margin-top: 60px

.txtstatus
	font-size: 12px
	font-weight: bold
	color: #F33
	margin-top: 30px

.txtstatus > p
	margin-bottom: 0px
	margin-top: 2px

.icoerr
	width: 24px
	height: 24px
	background-image: url(../img/error.png)

.selectherobox
	margin: 0 auto
	padding-top: 224px
	width: 384px

.herobox
	width: 96px
	display: inline-block
	margin-top: 8px

.herobox > .portrait
	margin: 0 auto

.herobox > .name
	width: 100%
	text-align: center
	color: #DDD

.herobox:hover > .name
	color: #AFA

.portrait
	width: 32px
	height: 32px
	background-image: url(../img/portrait.png)

.portrait.hero0
	background-position: 0px 0
.herobox:hover > .portrait.hero0
	background-position: 0px 32px
.portrait.hero1
	background-position: -32px 0
.herobox:hover > .portrait.hero1
	background-position: -32px 32px
.portrait.hero2
	background-position: -64px 0
.herobox:hover > .portrait.hero2
	background-position: -64px 32px
.portrait.hero3
	background-position: -96px 0
.herobox:hover > .portrait.hero3
	background-position: -96px 32px